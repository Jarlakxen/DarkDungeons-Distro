use uo;
use os;

include ":brainAI:npcNerves";
include ":brainAI:npcCommands";
include ":brainAI:npcWatchList";

program BrainNerve(params)
	var npc		:= params[1];
	//var nerve_name	:= params[2];
	var event	:= params[3];
	var settings	:= params[4];
	var scripts	:= params[5];
	params := 0; // Not needed anymore.

	while ( npc )
		if ( event )
			case ( event.type )
				SYSEVENT_GONE_CRIMINAL:
					GoneCriminal(npc, event, settings, scripts);
					break;
			endcase

			event := 0;
		endif

		SleepMS(5);
		event := Wait_For_Event(600);
	endwhile

	return 1;
endprogram

function GoneCriminal(npc, byref event, byref settings, byref scripts)
	var source := event.source;

	if ( NPC_ShouldWatch(npc, source, settings, scripts) )
		AI_WakeUp(npc);
		return 1;
	endif

	return 0;
endfunction

