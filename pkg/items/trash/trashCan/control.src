use uo;
use os;

program controlScript(item)
	var count := 0;
	while( item )
		foreach trashitem in ( EnumerateItemsInContainer(item) )
			if( GetObjProperty(trashitem, "#DestroyAt") <= ReadGameClock() )
				count := count + 1;
				DestroyItem(trashitem);
			endif
			SleepMS(2);
		endforeach

		if( count )
			PrintTextAbove(item, "Destroying items in trash.");
		endif

		count := 0;
		Sleep(120);
	endwhile

	return 1;
endprogram