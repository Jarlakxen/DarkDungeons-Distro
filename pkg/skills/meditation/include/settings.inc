use uo;
use os;
use cfgfile;

/*
 * ME_GetSettingsCfgFile(engine_name)
 *
 * Purpose
 * Reads in :meditation:config/settings.cfg
 *
 * Parameters
 *
 * Return value
 * A config file reference.
 *
 */
function ME_GetSettingsCfgFile()
	var settings_path := ":meditation:settings";
	var cfg := ReadConfigFile(settings_path);

	if ( cfg.errortext )
		SysLog("Error::ME_GetSettingsCfgFile() - Unable to open ["+settings_path+".cfg] ->"+cfg.errortext);
	endif

	return cfg;
endfunction

/*
 * ME_GetSettingsCfgElem(elem_name, cfg_file)
 *
 * Purpose
 * Retrieves an elem from a config file. 
 *
 * Parameters
 * elem_name:	A string matching the elem name to be retrieved.
 * cfg_file:	Optional parameter - reference to a config already read in by ME_GetSettingsCfgFile()
 *
 * Return value
 * A config file elem reference.
 *
 */
function ME_GetSettingsCfgElem(elem_name, byref cfg_file:=0)
	if ( !cfg_file )
		cfg_file := ME_GetSettingsCfgFile();
	endif
	
	var elem := cfg_file[elem_name];

	if ( elem.errortext )
		SysLog("Error::ME_GetSettingsCfgElem() - Unable to find elem ["+elem_name+"] ->"+elem.errortext);
	endif

	return elem;
endfunction

