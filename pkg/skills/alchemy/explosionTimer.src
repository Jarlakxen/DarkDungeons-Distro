use uo;
use os;

program explosion_timer(parms)
	var potion := parms[1];
	//var who := parms[2]; // uncomment if needed
	PrintTextAbove(potion, "3");
	sleep(1);
	PrintTextAbove(potion, "2");
	sleep(1);
	PrintTextAbove(potion, "1");
	sleep(1);
	start_script(":alchemy:exploder", parms);
endprogram